{
	"root": true,

	"env": {
		"browser": true,
		"es2021": true
	},
	"overrides": [
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"eol-last": ["error", "always"],
		"semi": ["error", "always"],
		"no-extra-semi": "error",
		"quotes": ["error", "double"],
		"indent": [
			"error", 
			"tab", 
			{ 
				"MemberExpression": 0,	
				"ObjectExpression": 1,
				"ArrayExpression": 1,
				"ImportDeclaration": 1,
				"CallExpression": { 
					"arguments": 1 
				}, 
				"FunctionDeclaration": { 
					"parameters": 1 
				}, 
				"FunctionExpression": { 
					"parameters": 1 
				}, 
				"SwitchCase": 1
			}
		],
		"object-curly-newline": [
			"error", 
			{
				"ObjectExpression": { 
					"consistent": true, 
					"multiline": true, 
					"minProperties": 4 
				}
			}
		],
		"object-curly-spacing": ["error", "never"],
		"array-bracket-newline": ["error", { "multiline": true, "minItems": 4}],
		"array-bracket-spacing": ["error", "never"],
		"array-element-newline": ["error", "consistent"],
		"comma-spacing": ["error", { "before": false, "after": true }],
		"comma-style": ["error", "last"],
		"no-array-constructor": "error",
		"space-in-parens": ["error", "never"],
		"space-before-function-paren": ["error", "never"],
		"keyword-spacing": [
			"error",
			{
				"overrides": {
					"if": {
						"after": false
					},
					"for": {
						"after": false
					},
					"while": {
						"after": false
					},
					"static": {
						"after": true
					},
					"as": {
						"before": true,
						"after": true
					},
					"import": {
						"after": true
					},
					"from": {
						"before": true,
						"after": true
					}

				}
			}
		],
		"arrow-spacing": ["error", { "before": true, "after": true }],
		"space-before-blocks": [
			"error",
			{
				"functions": "never",
				"keywords": "never",
				"classes": "never"
			}
		],
		"func-call-spacing": ["error", "never"],
		"semi-spacing": ["error", {"before": false, "after": true}],
		"nonblock-statement-body-position": ["error", "beside"],
		"key-spacing": ["error", { "afterColon": true}],
		"space-infix-ops": "error",
		"space-unary-ops": "error"
	}
}
